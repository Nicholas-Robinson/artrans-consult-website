---
export interface Props {
  href?: string;
  variant?: 'primary' | 'outline' | 'text';
  type?: 'button' | 'submit' | 'reset';
  onclick?: string;
}

const { href, variant = 'primary', type = 'button', onclick } = Astro.props as Props;
---
{href ? (
  <a class={`atom-btn atom-btn--${variant}`} href={href}><slot /></a>
) : (
  <button class={`atom-btn atom-btn--${variant}`} type={type} onclick={onclick}><slot /></button>
)}

<style>
.atom-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.9rem 1.6rem;
  border-radius: 6px;
  font-weight: 600;
  font-family: var(--font-heading);
  cursor: pointer;
  transition: transform 0.18s ease, box-shadow 0.18s ease;
  text-decoration: none;
  border: 2px solid transparent;
}

.atom-btn:active { transform: translateY(1px); }

.atom-btn--primary {
  background: var(--accent-color);
  color: var(--white);
  border-color: var(--accent-color);
}
.atom-btn--primary:hover { background: var(--accent-hover); border-color: var(--accent-hover); box-shadow: var(--shadow-md); transform: translateY(-2px); }

.atom-btn--outline {
  background: transparent;
  color: var(--accent-color);
  border-color: var(--accent-color);
}
.atom-btn--outline:hover { background: var(--accent-color); color: var(--white); box-shadow: var(--shadow-md); transform: translateY(-2px); }

.atom-btn--text {
  background: transparent;
  color: var(--accent-color);
  padding: 0;
  border: none;
  font-weight: 700;
}
.atom-btn--text:hover { color: var(--accent-hover); transform: translateX(6px); }
</style>

